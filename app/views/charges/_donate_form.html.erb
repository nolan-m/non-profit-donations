
  <form action="/companies/<%= "#{@company.id}" %>/charges/" method="POST" id="payment-form">
    <span class="payment-errors"></span>

    <div class="form-row">
      <label>
        <span>Email</span>
        <input type="text" name="email"/>
      </label>
    </div>
    <div class="form-row">
      <label>
        <span>Card Number</span>
        <input type="text" size="20" value="4242424242424242" data-stripe="number"/>
      </label>
    </div>
    <div class="form-row">
      <label>
        <span>CVC</span>
        <input type="text" size="4" value="434" data-stripe="cvc"/>
      </label>
    </div>

    <div class="form-row">
      <label>
        <span>Expiration (MM/YYYY)</span>
        <input type="text" size="2" value="04" data-stripe="exp-month"/>
      </label>
      <span> / </span>
      <input type="text" size="4" value="2016" data-stripe="exp-year"/>
    </div>

    <div class="form-row">
      <label>
        <span>Amount</span>
        <input type="text" size="8" name='amount' data-stripe="amount"/>
      </label>
    </div>

    <button type="submit">Submit Payment</button>
  </form>
